<html>
<head>
    <title>Javascript Math</title>
</head>
<body>
<script>
    let a = 25;
    let b = 4;
    document.write("<h2>Math Operations</h2>");
    document.writeln("a = " + a + "<br>");
    document.writeln("b = " + b + "<br><br>");
    document.writeln("Addition (a + b): " + (a + b) + "<br>");
    document.writeln("Subtraction (a - b): " + (a - b) + "<br>");
    document.writeln("Multiplication (a * b): " + (a * b) + "<br>");
    document.writeln("Division (a / b): " + (a / b) + "<br>");
    document.writeln("Modulus (a % b): " + (a % b) + "<br><br>");
    document.writeln("Square root of a: " + Math.sqrt(a) + "<br>");
</script>
</body>
</html>

